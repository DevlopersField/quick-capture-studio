{
    "manifest_version": 3,
    "name": "1ClickCapture - Quick Capture Studio",
    "version": "1.0.3",
    "description": "Powerful screen capturing, live recording, and real-time annotation tool.",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icons/icon.png"
    },
    "icons": {
        "128": "icons/icon.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "desktopCapture"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}